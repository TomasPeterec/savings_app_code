generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  firebase_uid String   @id
  email        String
  display_name String?
  created_at   DateTime @default(now())  // <-- auto-set timestamp

  @@map("users") // Maps this Prisma model to the existing 'users' table in Neon
}
